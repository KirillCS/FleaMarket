@model IEnumerable<Category>
@inject IOptions<ApplicationConfigurations> Configuration
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MainPage"];
}

@functions
{
    public string GetPlaceholderPath() =>
        System.IO.Path.Combine(Configuration.Value.ImagesFolder, Configuration.Value.ImagePlaceholderPath);
}

<div class="row">
    <div class="col-md-4 col-lg-3">
        <div class="jumbotron p-3">
            <h5 class="mb-3">@Localizer["Filters"]</h5>
            <h6>@Localizer["Categories"]</h6>
            <ul id="js-categories-filter" class="list-unstyled m-0">
                @if (!Model.IsNullOrEmpty())
                {
                    @foreach (var category in Model)
                    {
                        var id = $"{category.Id}_{category.Name}";
                        <li>
                            <div class="form-check">
                                <input id="@id" class="form-check-input" type="checkbox" value="@category.Id">
                                <label class="form-check-label" for="@id">
                                    @category.Name
                                </label>
                            </div>
                        </li>
                    }
                }
            </ul>
            <hr>

            <div class="d-flex flex-row align-items-center justify-content-between">
                <button id="js-filter-button" class="btn btn-primary btn-sm btn-block mr-1">@Localizer["Filter"]</button>
                <button id="js-clear-filter-button" class="btn btn-secondary btn-sm" title="@Localizer["ResetFilters"]">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-8 col-lg-9">
        <div class="d-flex mb-3">
            <input id="js-search-input" class="form-control mr-2" name="searchString" type="search" placeholder="@Localizer["SearchPlaceholder"]" aria-label="Search" autocomplete="off">
            <button id="js-clear-search-button" class="btn btn-outline-secondary" title="@Localizer["ResetSearch"]">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                </svg>
            </button>
        </div>

        <div id="js-search-result-label" class="small mb-3"></div>

        <div class="d-block text-center">
            <div id="js-loading" class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
        </div>

        <h5 id="js-no-items-label" style="display: none;">@Localizer["NoItems"]</h5>

        <ul id="js-items-list" class="list-group mb-3" data-currency-symbol="@Configuration.Value.CurrencySymbol">
            <li class="list-group-item" style="display: none;">
                <div class="d-flex align-items-center">
                    <div class="img-cover">
                        <a class="card-link text-wrap" href="#"><img src="@GetPlaceholderPath()" alt="[itemName]" /></a>
                    </div>
                    <div class="d-flex justify-content-between flex-column p-0 pl-3 w-100">
                        <h5><a class="card-link text-wrap" href="#">[itemName]</a></h5>
                        <div class="mb-1 limited-text line-clamp-1">
                            [itemCategories]
                            [itemTradeEnabled]
                        </div>
                        <div class="text-black-50 mb-2 limited-text line-clamp-2 hidden-sm">
                            [itemDescription]
                        </div>
                        <div class="d-flex flex-row flex-wrap justify-content-between align-items-center">
                            <h5>Price: [itemPrice]</h5>
                            <div class="small text-muted">[itemPublishingDate]</div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <div id="paginator" class="paginationjs"></div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/to-local-time-converter.js"></script>
<script src="~/js/searching-filtering.js"></script>